{
    // See https://code.visualstudio.com/docs/editor/tasks for more information
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with SFML",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/*.cpp",
                "-o",
                "${workspaceFolder}/game",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-I/usr/include/SFML",
                "-L/usr/lib"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compile all .cpp files in the workspace with SFML libraries"
        },
        {
            "label": "Run game",
            "type": "shell",
            "command": "${workspaceFolder}/game",
            "dependsOn": "Build with SFML",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}